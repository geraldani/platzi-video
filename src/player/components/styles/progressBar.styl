// CON EL INPUT RANGE
input[type=range]
  &.progressBar
    -webkit-appearance none
    width 100%
    margin 0
    height alto
    position absolute
    top -7px
    background-color transparent
    &:focus
      outline none
      &::-webkit-slider-runnable-track
        background: rgba(27, 89, 150, 0.75);
      &::-ms-fill-lower
          background: rgba(23, 76, 128, 0.75);
      &::-ms-fill-upper
        background: rgba(27, 89, 150, 0.75);
    &::-webkit-slider-runnable-track
      width: 100%;
      height: 5.3px;
      cursor: pointer;
      box-shadow: 0 0 0 #000000, 0px 0px 0px #0d0d0d;
      background: rgba(23, 76, 128, 0.75);
      border-radius: 25px;
      border: 0 solid #000101;
    &::-webkit-slider-thumb
      box-shadow: 0 0 0 #4a87c5, 0px 0px 0px #5d94cb;
      border: 0 solid #91786f;
      height: 10px;
      width: 10px;
      border-radius: 50%;
      background: rgba(119, 141, 166, 0.94);
      cursor: pointer;
      -webkit-appearance: none;
      margin-top: -2px;
    &::-moz-range-track
      width: 100%;
      height: 5.3px;
      cursor: pointer;
      box-shadow: 0 0 0 #000000, 0 0 0 #0d0d0d;
      background: rgba(23, 76, 128, 0.75);
      border-radius: 25px;
      border: 0 solid #000101;
    &::-moz-range-thumb
      box-shadow: 0 0 0 #4a87c5, 0 0 0 #5d94cb;
      border: 0 solid #91786f;
      height: 15px;
      width: 15px;
      border-radius: 50px;
      background: rgba(119, 141, 166, 0.94);
      cursor: pointer;
    &::-ms-track
      width: 100%;
      height: 5.3px;
      cursor: pointer;
      background: transparent;
      border-color: transparent;
    &::-ms-fill-lower
      background rgba(19, 63, 106, 0.75);
      border 0 solid #000101;
      border-radius 50px;
      box-shadow 0 0 0 #000000, 0 0 0 #0d0d0d;
    &::-ms-fill-upper
      background rgba(23, 76, 128, 0.75);
      border 0 solid #000101;
      border-radius 50px;
      box-shadow 0 0 0 #000000, 0 0 0 #0d0d0d;
    &::-ms-thumb
      box-shadow 0 0 0 #4a87c5, 0 0 0 #5d94cb;
      border 0 solid #91786f;
      //height 15px;
      width 15px;
      border-radius 50px;
      background rgba(119, 141, 166, 0.94);
      cursor pointer;
      height 5.3px;


